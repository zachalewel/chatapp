<% publish_to "/messages/new" do %>
$('#chat').append("<%= j render(@message) %>");
var height = 0;
$('#chat').each(function(){
    height += parseInt($(this).height());
});
height += '400px';
$('#chat').animate({scrollTop: height});


<% case @message.content %>
<% when "quit barking" then  %>
$.playSound("<%= audio_path('sms_sound') %>");
<% when "good girl" then %>
$.playSound("<%= audio_path('sms_sound') %>");
<% when "sit" then %>
$.playSound("<%= audio_path('sms_sound') %>");
<% when "what are you doing" then %>
$.playSound("<%= audio_path('sms_sound') %>");
<% when "chh" then %>
$.playSound("<%= audio_path('sms_sound') %>");
<% else %>
$.playSound("<%= audio_path('gat') %>");
<% end %>

<% end %>
$("#new_message")[0].reset();
