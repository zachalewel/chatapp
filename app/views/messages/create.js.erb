<% publish_to "/messages/new" do %>
$('#chat').append("<%= j render(@message) %>");
var height = 0;
$('#chat').each(function(){
  height += parseInt($(this).height());
});
height += '400px';
$('#chat').animate({scrollTop: height});
$.playSound("http://soundbible.com/mp3/Chain%20Gun%20Shooting-SoundBible.com-882681443")
<% end %>
$("#new_message")[0].reset();
